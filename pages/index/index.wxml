    <view >456</view>
    <text >123</text>
    <text >123</text>
  </view>
  <view>
    <text >图片上传</text>
    <button bind:tap="uploadImage">图片上传</button>
  </view>
  <view >
    <text >授权</text>
    <button open-type="getUserInfo" bindgetuserinfo="getUserInfo">getUserInfo</button>
    <button bind:tap="getUserProfile">getUserProfile</button>
    <button bind:tap="getSetting">getSetting</button>
    <button open-type="openSetting">openSetting</button>
    <button bind:tap="login">login</button>
    <button bind:tap="authorize">authorize</button>
  </view>
  <view>
    <text>路由</text>
    <button bind:tap="navigateTo">navigateTo</button>
    <button bind:tap="redirectTo">redirectTo</button>
  </view>
  <view>
    <text>自定义组件</text>
    <comp bind:mytap="bindMyTap"></comp>
  </view>
  <view>
    <text>发起请求</text>
    <button bind:tap="onClick">点击发起请求</button>
  </view>
</view>
