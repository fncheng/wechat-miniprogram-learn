/* pages/meetManage/index.wxss */
page {
  background-color: #F7FCFF;
}

.van-search {
  padding-left: 10rpx !important;
  padding-right: 10rpx !important;
}

.meeting-card {
  height: 5rem;
  margin-top: 0.5rem;
  background-color: #fff;
}

.meeting-org {
  font-size: 1rem;
  font-weight: 400;
}

.meeting-status {
  font-size: 0.88rem;
}

.meeting-time {
  font-size: 0.88rem;
  color: #333333;
  font-weight: 300;
}

.meeting-action {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 4.25rem;
  height: 1.56rem;
  font-size: 0.88rem;
  background-color: rgba(98, 120, 254, 0.75);
  border-radius: 0.81rem;
}

.meeting-modal {
  height: 75%;
  padding-top: 1.2rem;
  padding-left: 1rem;
  padding-right: 1rem;
  padding-bottom: 1rem;
}

.meeting-modal .title {
  margin-bottom: 1.25rem;
  color: rgba(98, 120, 254, 1);
}

.meeting-modal-title {
  margin-bottom: 0.5rem;
  color: rgb(48, 23, 23);
}

.product-sense {
  height: 90%;
  padding: 0.75rem 1.5rem;
}

.product-sense-item {
  height: 2.5rem;
  line-height: 2.5;
}

.button-action {
  width: 48%;
}

.pd_idea_btn {
  height: 1.8rem !important;
  border-radius: 1.5rem !important;
}

/* 会中执行清单 */
.meeting-execute {
  height: 75%;
}

.actjoin-people-title {
  width: 6rem !important;
}

.btn-text {
  height: 1.75rem !important;
}

.btn-text-area {
  width: 16rem !important;
  margin-left: -10rem;
}

.table-header {
  height: 3rem;
  display: grid;
  grid-template-columns: 50% 25% 25%;
  justify-items: center;
  align-items: center;
}

.table-body {
  height: 2.5rem;
  display: grid;
  grid-template-columns: 50% 25% 25%;
  justify-items: center;
  align-items: center;
}

.bg-btn__primary {
  /* padding-left: 0;
  padding-right: 0; */
  width: 2.75rem;
  text-align: center;
  background-color: #6278fe;
  color: #fff;
}


/* mixin */
.cell-border-bottom::after {
  left: 0;
  right: 0;
}

.van-search__content.van-search__content--square {
  border-radius: 0.375rem;
}