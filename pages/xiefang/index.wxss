page {
  background-color: #F7FCFF;
}

.van-search {
  padding-left: 10rpx !important;
  padding-right: 10rpx !important;
}

.xiefang-card {
  height: 7rem;
  margin-top: 0.5rem;
  background-color: #fff;
}

.xiefang-name {
  font-size: 1.25rem;
  font-weight: 400;
}

.xiefang-address {
  color: #333333;
  font-weight: normal;
}

.xiefang-status {
  font-size: 0.88rem;
}

.xiefang-people {
  font-size: 0.88rem;
  color: #666666;
  font-weight: 300;
}

.xiefang-time {
  font-size: 0.88rem;
  color: #666666;
  font-weight: 300;
}

.xiefang-action {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 4.25rem;
  height: 1.56rem;
  font-size: 0.88rem;
  color: #fff;
  background-color: rgba(98, 120, 254, 0.75);
  border-radius: 0.81rem;
}

.create-xf {
  width: 6rem;
}

.xiefang-dialog {
  z-index: 9999;
}

.xiefang-checkbox {
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.bf-title {
  padding-left: 1rem;
  padding-right: 1rem;
  line-height: 2;
  font-weight: 400;
  margin-top: 0.5rem;
  margin-bottom: 1rem;
}

.grid {
  display: grid;
}

.grid-cols-2 {
  grid-template-columns: repeat(2, minmax(0, 1fr));
}

.gap-x-2 {
  column-gap: 0.5rem;
}

.px-4 {
  padding-left: 1rem;
  padding-right: 1rem;
}

.mt-8 {
  margin-top: 2rem;
}

.text-grey-300 {
  color: #333333;
}

.btn-disabled {
  background-color: #D9D9D9;
  border-radius: 0.25rem;
}